<% layout('/layouts/boilerplate') %>
   
<div class="row container">
    
    <!-- offset col to center -->
    <div class="col-6 offset-3">
        <h1 class="text-center">New Image</h1>
        <form action="/images" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title"> Title </label>
                <input class="form-control" type="text" id="title" name="image[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description"> Image Description </label>
                <textarea class="form-control" type="text" id="description" name="image[description]"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label"  for="url"> Image Address </label>
                <input class="form-control" type="text" id="url" name="image[imageurl]">
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Image!</button>
            </div>
                
            
    
        </form>
        <a href="/images"> All images</a>
    </div>
    
</div>

   
       